# MLflow Configuration for V3
# Place this in your environment or .env file

# Local tracking (default)
MLFLOW_TRACKING_URI=file:./mlruns

# For remote tracking server:
# MLFLOW_TRACKING_URI=http://localhost:5000

# Experiment settings
MLFLOW_EXPERIMENT_NAME=v3-climate-transformer

# Artifact storage
MLFLOW_ARTIFACT_ROOT=./mlruns/artifacts

# Model registry
# Set to enable model staging workflow
# MLFLOW_ENABLE_SYSTEM_METRICS_LOGGING=true
